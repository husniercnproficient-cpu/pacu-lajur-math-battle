* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.landscape-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  animation: fadeIn 1s ease;
}

.landscape-container.fade-out {
  animation: fadeOut 0.8s ease forwards;
}

.landscape-container img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.powered-by {
  position: absolute;
  bottom: 10px;
  left: 10px;
  color: #fff;
  font-size: 0.9rem;
  font-family: sans-serif;
  background: rgba(0,0,0,0.3);
  padding: 2px 6px;
  border-radius: 4px;
}

/* Fade Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: scale(1.05); }
  to   { opacity: 1; transform: scale(1); }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to   { opacity: 0; }
}

/* Portrait Warning */
@media (orientation: portrait) {
  .landscape-container::before {
    content: "Please rotate your device to landscape";
    position: absolute;
    color: white;
    font-size: 2rem;
    text-align: center;
    top: 50%;
    transform: translateY(-50%);
  }

  .landscape-container img,
  .powered-by {
    display: none;
  }
}
